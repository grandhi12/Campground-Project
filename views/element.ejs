                            <% for(let review of campgrounds.reviews){ %>
                                <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title"> </h5>
                <p class="starability-result" data-rating="<%=review.rating%>">
                    Rated: <%= review.rating %> stars
                </p>
                <!-- <h6 class="card-subtitle mb-2 text-muted">By </h6> -->
                <p class="card-text">Review: <%= review.body %></p>
                                    <form action="/camp/<%= campgrounds._id%>/review/<%= review._id %>?_method=DELETE" method="POST"><button class="btn btn-sm btn-danger">delete</button ></form>
                                        
                        </div>
                    </div>
